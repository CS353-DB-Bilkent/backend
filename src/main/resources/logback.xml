<configuration>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{35} [%thread] - %msg %n</pattern>
        </encoder>
    </appender>
</configuration>